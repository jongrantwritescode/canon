FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY vendor/ ./vendor/

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Set environment variable for API URL
ENV VITE_CANON_API=http://host.docker.internal:3000

# Expose port
EXPOSE 8080

# Start development server
CMD ["npm", "run", "dev"]
