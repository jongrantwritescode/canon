{
  "name": "canon",
  "version": "1.0.0",
  "description": "LLM-driven universe builder",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "./start-all.sh",
    "dev:clean": "./stop-all.sh && docker system prune -f && ./start-all.sh",
    "dev:full-clean": "./stop-all.sh && docker system prune -af && docker volume prune -f && ./start-all.sh",
    "stop": "./stop-all.sh",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^1.10.12"
  },
  "packageManager": "npm@9.0.0"
}
